<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.kevin_stieglitz.androidmemoryleakexample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".vialongrunningtask.LeakThreadsActivity" />
        <activity android:name=".vialongrunningtask.LeakActivityToThreadActivity" />
        <activity android:name=".vialongrunningtask.LeakActivityToHandlerActivity" />
        <activity android:name=".vialongrunningtask.LeakActivityToAsyncTaskActivity" />
        <activity android:name=".viastaticreference.LeakActivityToStaticViewActivity" />
        <activity android:name=".viastaticreference.LeakActivityToStaticVariableActivity" />
        <activity android:name=".viastaticreference.LeakActivityToStaticInnerClassActivity" />
        <activity android:name=".viastaticreference.LeakActivityToSingletonActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>